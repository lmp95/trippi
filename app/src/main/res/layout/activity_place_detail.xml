<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".PlaceDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/nearbyPlaceDetailCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/nearbyPlaceDetailProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/placeDetailMapView"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:cameraTargetLat="-33.796923"
                app:cameraTargetLng="150.922433"
                app:cameraZoom="13"
                app:mapType="normal"
                app:uiTiltGestures="true"
                app:uiZoomControls="true"
                app:uiZoomGestures="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/placeDetailMapView"
                android:layout_marginTop="-16dp"
                android:background="@drawable/rounded_layout"
                android:paddingLeft="@dimen/pad_left"
                android:paddingTop="@dimen/pad_top"
                android:paddingRight="@dimen/pad_right">

                <androidx.cardview.widget.CardView
                    android:id="@+id/placeDetailImageCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/placeDetailImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/placeDetailNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_left"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/placeDetailImageCardView"
                    android:text="Place Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/placeDetailLocationIconTextView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@id/placeDetailNameTextView"
                    android:layout_marginLeft="@dimen/pad_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_toRightOf="@id/placeDetailImageCardView"
                    app:srcCompat="@drawable/ic_pin" />

                <TextView
                    android:id="@+id/placeDetailAddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/placeDetailNameTextView"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/placeDetailLocationIconTextView"
                    android:maxLines="2"
                    android:text="Place Address"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/placeDetailRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/placeDetailImageCardView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_top"
                    android:progressTint="@color/dark_cyan"
                    android:scaleX=".65"
                    android:scaleY=".65" />

                <TextView
                    android:id="@+id/placeDetailPhoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/placeDetailRatingBar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    android:text="Phone Number"
                    android:textSize="@dimen/hotel_text"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/openingHoursRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/placeDetailPhoneTextView" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>