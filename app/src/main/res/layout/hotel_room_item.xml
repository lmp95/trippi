<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roomRelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/roomCardView"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/roomIconImageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_room"
                app:tint="@color/matte_black" />

            <TextView
                android:id="@+id/hotelRoomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/roomIconImageView"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="@color/matte_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/roomPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotelRoomTextView"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:text="TextView"
                android:textColor="@color/matte_black"
                android:textSize="12sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>